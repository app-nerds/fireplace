{{define "layout"}}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{.Title}} | Fireplace</title>
  <link rel="stylesheet" href="/static/js/libraries/nerd-js-library/base.min.css" />
  <link rel="stylesheet" href="/static/js/libraries/nerd-js-library/components.min.css" />
  <link rel="stylesheet" href="/static/css/styles.css" />
  <link rel="stylesheet" href="/static/js/libraries/quill/quill.snow.css" />

  <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js"></script>
</head>

<body>
  <header>
    <div class="header-left">
      <a href="/"><img src="/static/images/header-dots.png" alt="image of dots" /></a>
      <h1>Fireplace</h1>
    </div>

    <div class="header-right">
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/#about">About</a></li>
          <li><a href="/#getfireplace">Get Fireplace</a></li>
          <li><a href="/view-logs">View Logs</a></li>
          <li><a href="/manage-servers">Manage Servers</a></li>
        </ul>
      </nav>

      <member-login-bar login-path="/login"></member-login-bar>
    </div>
  </header>

  <main>
    {{template "content" .}}
  </main>

  <footer>
    <section>
      1519 Toluca Dr.<br />
      League City, TX<br />
      77573
    </section>

    <section>
      Email: &nbsp;<a href="mailto:websites@appnerds.net">websites@appnerds.net</a>
    </section>

    <section>
      &copy; 2022 App Nerds LLC<br />
    </section>
  </footer>

  <script type="module" src="/static/js/pages/layout.js"></script>
  {{range .RegularScripts}}
    <script src="{{.}}"></script>
  {{end}}

  {{range .ModuleScripts}}
    <script type="module" src="{{.}}"></script>
  {{end}}
</body>
</html>
{{end}}
